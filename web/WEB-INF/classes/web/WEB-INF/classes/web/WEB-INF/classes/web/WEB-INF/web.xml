<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID"
         version="3.1">
    <display-name>web</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <!--指定Servlet名称 Servlet注册名-->
        <servlet-name>MyHttpServlet</servlet-name>
        <!--servlet类全路径-->
        <servlet-class>com.huirong.servlet.MyHttpServlet</servlet-class>
        <!--配置额外属性-->
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
        <!--可以指定servlet在服务器启动的时候自动创建-->
        <!--1表示被init的顺序-->
        <load-on-startup>1</load-on-startup>

    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.huirong.servlet.LoginServlet</servlet-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LoginClServlet</servlet-name>
        <servlet-class>com.huirong.servlet.controllor.LoginClServlet</servlet-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>MainFrame</servlet-name>
        <servlet-class>com.huirong.servlet.view.MainFrame</servlet-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DownServlet</servlet-name>
        <servlet-class>com.huirong.servlet.view.DownServlet</servlet-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownServlet</servlet-name>
        <url-pattern>/DownServlet</url-pattern>
    </servlet-mapping>

    <!--参数可以被多个Servlet使用-->
    <!--<context-param>-->
        <!--<param-name></param-name>-->
        <!--<param-value></param-value>-->
    <!--</context-param>-->

    <!--用于映射一个已经注册的Servlet的对外访问路径-->
    <servlet-mapping>
        <!--servlet注册名称-->
        <servlet-name>MyHttpServlet</servlet-name>
        <!--对外访问路径 可以使用通配符-->
        <url-pattern>/Hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginClServlet</servlet-name>
        <url-pattern>/LoginClServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainFrame</servlet-name>
        <url-pattern>/MainFrame</url-pattern>
    </servlet-mapping>
</web-app>